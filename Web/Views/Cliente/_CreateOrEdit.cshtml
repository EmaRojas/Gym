@{
    Layout = null;
}

<div class="row" style="padding:30px">
    <form class="formValidate" id="formValidate" method="get" action="">
        <div class="row">
            <div class="input-field col s12 m6">
                <label id="lnombre" for="nombre">Nombre*</label>
                <input id="nombre" name="nombre" type="text" data-error=".errorTxt1">
                <div class="errorTxt1"></div>
            </div>
            <div class="input-field col s12 m6">
                <label id="lapellido" for="apellido">Apellido*</label>
                <input id="apellido" name="apellido" type="text" data-error=".errorTxt2">
                <div class="errorTxt2"></div>
            </div>
            <div class="input-field col s12 m6">
                <label for="nacimiento">Nacimiento*</label>
                <input id="nacimiento" type="text" name="nacimiento" placeholder="10/07/2000" data-error=".errorTxt3">
                <div class="errorTxt3"></div>
            </div>
            <div class="input-field col s12 m6">
                <label for="dni">D.N.I.*</label>
                <input id="dni" type="text" name="dni" data-error=".errorTxt4">
                <div class="errorTxt4"></div>
            </div>
            <div class="input-field col s12 m6">
                <label for="tel">Teléfono*</label>
                <input id="tel" type="tel" name="tel" data-error=".errorTxt5">
                <div class="errorTxt5"></div>
            </div>
            <div class="input-field col s12 m6">
                <label for="direccion">Dirección</label>
                <input id="direccion" type="text" name="direccion" data-error=".errorTxt6">
                <div class="errorTxt6"></div>
            </div>
            <div class="right" style="padding-top:40px">
                <button class="btn btn waves-effect waves-light deep-purple darken-2" type="submit" name="action">
                    Guardar
                </button>
            </div>
        </div>
    </form>
</div>
<script src="~/Content/js/Proyecto/Cliente.js"></script>
