@model nXs.Services.Contract.Entities.AssociationViewModel

@{
    ViewBag.Title = "Asociación del usuario con el sistema";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="form-group">
    <div class="text-center">
        <div class="alert alert-success" role="alert">
            <h1>
                <i class="fa fa-check" aria-hidden="true"></i> Asociación del usuario con el sistema
            </h1>
            <h5>Aquí debera ingresar el codigo recibido por mail.</h5>
        </div>
    </div>
</div>

@using (Html.BeginForm("Associate", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-4 col-md-4 text-center">
            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", placeholder = "Código", autocomplete = "off" })
            @Html.ValidationMessage("Code", new { @class = "validationMessage" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-2">
            <div class="text-center">
                <button type="submit" class="btn btn-sm btn-success">Guardar</button>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Logout", "Account")">Cancelar</a>
            </div>
        </div>
    </div>
}