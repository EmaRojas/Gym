<center>
    <h2>Turnos</h2>
</center>
<hr style="background-color:#7e57c2; height:2px">

<div class="row m-b-20">
    <div class="offset-xl-4 col-xs-12 col-xl-2">
        <div class="form-group bmd-form-group">
            <label class="bmd-label-static">Fecha</label>
            <input class="form-control" id="fechaId" />
        </div>
    </div>
</div>

<div class="row" style="padding-top:2%">
    <div class="col-lg-12 col-md-12">

        <table id="table-sortable-server" data-url="@Url.Action("Table","Turno")">
            <thead>
                <tr>
                    <th data-field="state" data-checkbox="true">#</th>
                    <th data-field="Dia" data-align="center">
                        Día
                    </th>
                    <th data-field="HoraInicial" data-align="center">
                        Inicio
                    </th>
                    <th data-field="HoraFinal" data-align="center">
                        Fin
                    </th>
                    <th data-field="Cliente" data-align="center">
                        Cliente
                    </th>
                    <th data-field="Abono" data-align="center">
                        Abono
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() +1;

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;

        $('#fechaId').datepicker({
            format: 'dd/mm/yyyy',
        });

        $('#fechaId').val(today)

    });

    $("#fechaId").on('change', function () {

        var fecha = $("#fechaId").val();
        var url = "/Turno/Table?fecha=" + fecha;

        $('#table-sortable-server').bootstrapTable('refresh', {
            url: url
        });
    });
</script>


