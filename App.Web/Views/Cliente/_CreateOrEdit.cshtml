@model App.Web.Models.ClienteModel

@{
    Layout = null;
}
<script src="~/Scripts/Proyecto/Cliente.js"></script>

<div class="row m-b-20">
    <div class="form-group bmd-form-group col-md-4">
        <label class="bmd-label-static">Nombre *</label>
        @Html.TextBoxFor(model => model.Nombre, new { autofocus = "autofocus", @class = "form-control", required = "required", style = "width: 100%;" })
    </div>
    <div class="form-group bmd-form-group col-md-4">
        <label class="bmd-label-static">Apellido *</label>
        @Html.TextBoxFor(model => model.Apellido, new { autofocus = "autofocus", @class = "form-control", required = "required", style = "width: 100%;" })
    </div>
    <div class="form-group bmd-form-group col-md-4">
        <label class="bmd-label-static">D.N.I. *</label>
        @Html.TextBoxFor(model => model.Dni, new { required = "required", @class = "form-control", style = "width: 100%;" })
    </div>
    <div class="form-group bmd-form-group col-md-3">
        <label class="bmd-label-static">Fecha de nacimiento *</label>
        @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control datepicker", @id = "datepicker", @Value = Model.FechaNacimiento, required = "required", style = "width: 100%;" })
    </div>

    <div class="form-group bmd-form-group col-md-3">
        <label class="bmd-label-static">Teléfono *</label>
        @Html.TextBoxFor(model => model.Telefono, new { required = "required", @class = "form-control", style = "width: 100%;" })
    </div>
    <div class="form-group bmd-form-group col-md-3">
        <label class="bmd-label-static">Dirección</label>
        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", style = "width: 100%;" })
    </div>

    <div class="form-group bmd-form-group col-md-3">
        <label class="bmd-label-static">Email</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", style = "width: 100%;" })
    </div>

</div>

<center>
    <div class="form-group">
        <a href="@Url.Action("List")" class="btn btn-outline-primary" name="action">
            Volver
        </a>
        <button class="btn btn-primary" value="guardarAsignar" type="submit" name="guardar">
            Guardar y Asignar
        </button>
        <button class="btn btn-primary" value="guardar" type="submit" name="guardar">
            Guardar
        </button>
    </div>
</center>